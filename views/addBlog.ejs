<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <title>Add New Blog</title>
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background: white;
            padding: 2.5rem;
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 0.8s ease-out;
        }

        h1.page-title {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            margin-top: 2rem;
            animation: fadeInDown 0.6s ease-out;
        }

        label {
            font-weight: 500;
        }

        .form-control, .input-group-text {
            border-radius: 0.75rem !important;
        }

        .btn-primary {
            padding: 0.6rem 2rem;
            border-radius: 0.75rem;
            font-weight: 500;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <h1 class="page-title">Add New Blog</h1>

    <div class="container d-flex justify-content-center my-5">
        <div class="col-md-8 form-container">
            <form method="post" action="add-blog" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="form-label">Upload Cover Image</label>
                    <div class="input-group">
                        <label class="input-group-text" for="inputGroupFile01">Choose File</label>
                        <input type="file" name="coverImageUrl" class="form-control" id="inputGroupFile01">
                    </div>
                </div>

                <div class="mb-4">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" class="form-control" id="title" placeholder="Enter blog title">
                </div>

                <div class="mb-4">
                    <label for="body" class="form-label">Body</label>
                    <textarea name="body" class="form-control" id="body" style="height: 120px"
                        placeholder="Write your blog content..."></textarea>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Publish Blog</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('./partials/script.ejs') %>
</body>

</html>
